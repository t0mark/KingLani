<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KingLani" parent="Base.Theme.KingLani" />

    <style name="Base.Theme.KingLani" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 흑백 테마 색상 적용 -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!-- 기본 버튼 스타일도 흑백으로 -->
        <item name="buttonStyle">@style/KingLaniButton</item>
    </style>

    <!-- 버튼 흑백 스타일 -->
    <style name="KingLaniButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
